@page
@model MovieTicketsOnlineBooking.Pages.Movie.MovieDetailsAdminModel
@{
    Layout = "_AdminLayout";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Chi tiết phim</h2>
                </div>

                <div class="card-body">

                    <div class="row mb-4">
                        <div class="col-12 text-center">
                            @if (!string.IsNullOrEmpty(Model.Movie.Poster))
                            {
                                <img src="~/img/@Model.Movie.Poster"
                                     class="img-fluid rounded"
                                     alt="@Model.Movie.Title"
                                     style="max-height: 300px; width: auto;">
                            }
                            else
                            {
                                <img src="~/img/default-movie.jpg"
                                     class="img-fluid rounded"
                                     alt="Default movie image"
                                     style="max-height: 300px; width: auto;">
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Tên bộ phim</div>
                        <div class="col-md-8">@Model.Movie.Title</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Thể loại</div>
                        <div class="col-md-8">@Model.Movie.Category?.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Ngày phát hành</div>
                        <div class="col-md-8">@Model.Movie.ReleaseDate</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Thời lượng</div>
                        <div class="col-md-8">@Model.Movie.Duration?.ToString(@"hh\:mm\:ss")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Diễn viên</div>
                        <div class="col-md-8">@Model.Movie.Actor</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Đạo diễn</div>
                        <div class="col-md-8">@Model.Movie.Director</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Trạng thái</div>
                        <div class="col-md-8">
                            <span class="badge @(Model.Movie.Status == "Active" ? "bg-success" : "bg-danger")">
                                @Model.Movie.Status
                            </span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Mô tả</div>
                        <div class="col-md-8">@Model.Movie.Description</div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./ManageMovies" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </a>
                        @if (Model.Movie.Status != "Poster")
                        {
                            <a asp-page="./ChangeStatus" asp-route-id="@Model.Movie.Id"
                               class="btn @(Model.Movie.Status == "Active" ? "btn-danger" : "btn-success")">
                                <i class="bi @(Model.Movie.Status == "Active" ? "bi-x-circle" : "bi-check-circle") me-2"></i>
                                @(Model.Movie.Status == "Active" ? "Deactivate" : "Activate")
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <style>
        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            text-decoration: none;
            list-style: none;
            scroll-padding-top: 2rem;
            scroll-behavior: smooth;
        }

        a {
            text-decoration: none;
        }

        body {
            background-image: url("/img/login_background.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }

        .container {
            margin-top: 120px;
            background-color: antiquewhite;
            border-radius: 15px;
            border: dashed;
            color: orangered;
            padding: 20px;
        }

        .card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
        }

        .card-header {
            background: #ff2c1f;
            border-radius: 10px 10px 0 0;
        }

        h2 {
            color: white;
            font-weight: bold;
        }

        .fw-bold {
            color: #333;
        }

        .badge {
            font-size: 14px;
            padding: 0.5em 1em;
        }

        .btn-outline-secondary {
            padding: 0.5rem 1rem;
            border-color: #ff2c1f;
            color: #ff2c1f;
            font-weight: bold;
            border-radius: 0.5rem;
            transition: background 0.2s, color 0.2s;
        }

            .btn-outline-secondary:hover {
                background: #ff2c1f;
                color: white;
            }
    </style>
}
