@page
@model MovieTicketsBookings.Pages.Movie.CreateMovieModel
@{
    Layout = "_AdminLayout";
}
<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Tạo phim mới</h2>

    <div asp-validation-summary="All"></div>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Tên phim</label>
            <input asp-for="@Model.movie.Title" class="form-control" placeholder="Nhập tên phim">
            <span asp-validation-for="movie.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Thể loại</label>
            <select asp-for="movie.CategoryId" class="form-control">
                <option value="" disabled selected>Chọn thể loại phim</option>
                @foreach (var category in Model.categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="movie.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Ngày phát hành</label>
            <input type="date" asp-for="movie.ReleaseDate" class="form-control" placeholder="Chọn ngày phát hành">
            <span asp-validation-for="movie.ReleaseDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Diễn viên</label>
            <input asp-for="movie.Actor" class="form-control" placeholder="Nhập tên diễn viên">
            <span asp-validation-for="movie.Actor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Đạo diễn</label>
            <input asp-for="movie.Director" class="form-control" placeholder="Nhập tên đạo diễn ">
            <span asp-validation-for="movie.Director" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">TrailerURL</label>
            <input asp-for="movie.TrailerUrl" class="form-control" placeholder="Nhập Youtube trailer">
            <span asp-validation-for="movie.TrailerUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Thời lượng</label>
            <div class="row">
                <div class="col">
                    <div class="input-group">
                        <input asp-for="DurationHours" class="form-control" type="number" min="0" max="23" placeholder="Giờ">
                        <span class="input-group-text">giờ</span>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <input asp-for="DurationMinutes" class="form-control" type="number" min="0" max="59" placeholder="Phút">
                        <span class="input-group-text">phút</span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="movie.Duration" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Poster</label>
            <input type="file" asp-for="ImageFile" class="form-control" accept="image/*">
        </div>

        <div class="mb-3">
            <label class="form-label">Mô tả phim</label>
            <textarea asp-for="movie.Description" class="form-control" placeholder="Nhập mô tả phim" rows="5"></textarea>
            <span asp-validation-for="movie.Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/Movie/ManageMovies">Thoát</a>
        </div>
    </form>
</div>

@section Styles {
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <style>
        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            text-decoration: none;
            list-style: none;
            scroll-padding-top: 2rem;
            scroll-behavior: smooth;
        }

        a {
            text-decoration: none;
        }

        body {
            background-image: url("/img/login_background.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }

        .container {
            margin-top: 120px;
            background-color: antiquewhite;
            border-radius: 15px;
            border: dashed;
            color: orangered;
            padding: 20px;
        }

        h2 {
            color: #ff2c1f;
            font-weight: bold;
            text-shadow: 2px 2px 4px orange;
        }

        .form-control {
            border-radius: 0.5rem;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-label {
            color: #333;
            font-weight: bold;
        }

        .btn-primary {
            padding: 0.5rem 1rem;
            background: #ff2c1f;
            color: white;
            font-weight: bold;
            border-radius: 0.5rem;
            border: none;
            transition: background 0.2s;
        }

            .btn-primary:hover {
                background: #fa1208;
            }

        .btn-outline-secondary {
            padding: 0.5rem 1rem;
            border-color: #ff2c1f;
            color: #ff2c1f;
            font-weight: bold;
            border-radius: 0.5rem;
            transition: background 0.2s, color 0.2s;
        }

            .btn-outline-secondary:hover {
                background: #ff2c1f;
                color: white;
            }
    </style>
}