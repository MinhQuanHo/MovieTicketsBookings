@page
@model MovieTicketsBookings.Pages.User.EditUserModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Modify User</h2>
    <form method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input value="@Model.User.FullName" type="text" class="form-control" id="username" placeholder="Enter username" readonly>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input value="@Model.User.Email" type="text" class="form-control" id="email" placeholder="Enter email" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="@Model.IsActived" />
                <label class="form-check-label" for="status">Active</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Role</label>
            <input value="@Model.User.Role.RoleName" type="text" class="form-control" id="role" placeholder="Enter role" readonly>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/User/ManageUsers">Cancel</a>
        </div>
    </form>
</div>

@section Styles {
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <style>
        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            text-decoration: none;
            list-style: none;
            scroll-padding-top: 2rem;
            scroll-behavior: smooth;
        }

        a {
            text-decoration: none;
        }

        body {
            background-image: url("/img/login_background.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }

        .container {
            margin-top: 120px;
            background-color: antiquewhite;
            border-radius: 15px;
            border: dashed;
            color: orangered;
            padding: 20px;
        }

        h2 {
            color: #ff2c1f;
            font-weight: bold;
            text-shadow: 2px 2px 4px orange;
        }

        .form-control {
            border-radius: 0.5rem;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-label {
            color: #333;
            font-weight: bold;
        }

        .form-check-input:checked {
            background-color: #ff2c1f;
            border-color: #ff2c1f;
        }

        .btn-primary {
            padding: 0.5rem 1rem;
            background: #ff2c1f;
            color: white;
            font-weight: bold;
            border-radius: 0.5rem;
            border: none;
            transition: background 0.2s;
        }

            .btn-primary:hover {
                background: #fa1208;
            }

        .btn-outline-secondary {
            padding: 0.5rem 1rem;
            border-color: #ff2c1f;
            color: #ff2c1f;
            font-weight: bold;
            border-radius: 0.5rem;
            transition: background 0.2s, color 0.2s;
        }

            .btn-outline-secondary:hover {
                background: #ff2c1f;
                color: white;
            }

        .dropdown-menu {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 0.5rem;
            color: #333;
        }

        .dropdown-item {
            color: #ff2c1f;
        }

            .dropdown-item:hover {
                background: #ff2c1f;
                color: white;
            }
    </style>
}