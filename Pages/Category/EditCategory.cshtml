@page
@model MovieTicketsBookings.Pages.Category.EditCategoryModel
@{
    Layout = "_AdminLayout";
}
<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Sửa thể loại phim</h2>
    <form method="post">
        <input hidden asp-for="@Model.category.Id" class="form-control">
        <div class="mb-3">
            <label asp-for="category.Name" class="form-label">Thể loại phim</label>
            <input asp-for="category.Name" class="form-control" placeholder="Nhập thể loại phim">
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a class="btn btn-outline-secondary" asp-page="/Category/ManageCategories">Thoát</a>
        </div> 
    </form>
</div>

@section Styles {
    <style>
        body {
            background-image: url("/img/login_background.jpg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
        }

        .container {
            margin-top: 120px;
            background-color: antiquewhite;
            border-radius: 15px;
            border: dashed;
            color: orangered;
            padding: 20px;
        }

        h2 {
            color: #ff2c1f;
            font-weight: bold;
            text-shadow: 2px 2px 4px orange;
        }

        .form-control {
            border-radius: 0.5rem;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-label {
            color: #333;
            font-weight: bold;
        }

        .btn-primary {
            padding: 0.5rem 1rem;
            background: #ff2c1f;
            color: white;
            font-weight: bold;
            border-radius: 0.5rem;
            border: none;
            transition: background 0.2s;
        }

            .btn-primary:hover {
                background: #fa1208;
            }

        .btn-outline-secondary {
            padding: 0.5rem 1rem;
            border-color: #ff2c1f;
            color: #ff2c1f;
            font-weight: bold;
            border-radius: 0.5rem;
            transition: background 0.2s, color 0.2s;
        }

            .btn-outline-secondary:hover {
                background: #ff2c1f;
                color: white;
            }
    </style>
}